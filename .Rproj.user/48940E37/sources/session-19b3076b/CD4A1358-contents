<!-- Typed.js script to animate the text -->
<script>
  var options = {
    strings: [
      "Me chamo <strong>Lucca Nielsen</strong> e atuo como <strong>analista de dados</strong> especializado em desenvolver soluções para a área da <strong>Saúde Pública</strong>, <strong>Vigilância Epidemiológica</strong> e outros setores. Se você precisa <strong>entender</strong> melhor os dados da sua organização ou do seu projeto de pesquisa, <strong>automatizar</strong> rotinas, <strong>desenvolver</strong> dashboards/painéis interativos ou se quiser simplesmente <strong>aprender</strong> sobre uso da linguaguem de programação <strong>R</strong> aplicada, talvez eu possa te ajudar!"
    ],
    typeSpeed: 25,
    backSpeed: 0,
    loop: false,
    showCursor: true,
    cursorChar: '|',
    onComplete: function() {
      // Show the buttons when the typing is complete
      document.getElementById('button-container').style.display = 'block';
    }
  };

  var typed = new Typed("#typed-text", options);
</script>
